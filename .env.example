# ============================================================
# Pioneer - Environment Variables
# Copy this file to .env and fill in the values
# ============================================================

# WalletConnect Cloud Project ID (required for wallet modal)
# Get one at: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=

# Deployed contract addresses on Sepolia
VITE_CYBERPOWERBALL_ADDRESS=0x0000000000000000000000000000000000000000
VITE_TEXASHOLDEM_ADDRESS=0x0000000000000000000000000000000000000000

# Sepolia RPC (optional – RainbowKit has a default, but your own is faster)
VITE_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Hardhat deployer private key (NEVER commit real keys!)
DEPLOYER_PRIVATE_KEY=

# Chainlink VRF Subscription ID (Sepolia)
# Create at: https://vrf.chain.link
VRF_SUBSCRIPTION_ID=

# Chainlink Functions Subscription ID (Sepolia) — needed for Poker AI
# Create at: https://functions.chain.link
FUNCTIONS_SUBSCRIPTION_ID=

# Etherscan API Key (optional, for contract verification)
ETHERSCAN_API_KEY=
